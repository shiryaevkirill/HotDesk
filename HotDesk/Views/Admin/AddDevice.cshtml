@model HotDesk.Models.DbModels.Device


<div class="action-overlay"></div>
<div class="login-section">
    <span class="cross close-cross" type="button"></span>
    <form method="post" id="add-device-form">
        @Html.AntiForgeryToken()
        <div class="login-section-item">
            <div class="login-section-item-label">
                @Html.LabelFor(m => m.DeviceName)
            </div>
            <div>
                @Html.EditorFor(m => m.DeviceName)
                @Html.ValidationMessageFor(m => m.DeviceName)
            </div>
        </div>

        <div class="login-section-item">
            <div class="login-section-item-label">
                @Html.LabelFor(m => m.DeviceType)
            </div>
            <div>
                @Html.EditorFor(m => m.DeviceType)
                @Html.ValidationMessageFor(m => m.DeviceType)
            </div>
        </div>

        <div class="login-button">
            <button id="add-device" type="button">Add</button>
        </div>

    </form>
</div>