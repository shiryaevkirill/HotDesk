@using HotDesk.Models.AdminModels
@model List<WorkspaceEditorModel>

<div class="centered">
    <div class="data-container fixed-container">

        @{

            foreach (var workspace in Model)
            {
                <div class="workspace-container glass-effect">

                    <div class="workspace-section workspace-date">
                        <div class="workspace-header">Start date</div>
                        <div>
                            <p>@workspace.StartDate</p>
                        </div>
                        <div class="workspace-header">End date</div>
                        <div>
                            <p>@workspace.EndDate</p>
                        </div>
                    </div>
                    <div class="workspace-section workspace-description">
                        <div class="workspace-header">Description</div>
                        <div>
                            <p>@workspace.Description</p>
                        </div>
                    </div>
                    <div class="workspace-section workspace-device">
                        <div class="workspace-header">Devices</div>
                        <div>
                            <ul>
                                @foreach (var device in workspace.Devices) {
                                    <li>@device.DeviceName</li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="workspace-section workspace-employee">
                        <div class="workspace-header">Employee</div>
                        <div>
                            <p>@workspace.Employee</p>
                        </div>
                    </div>
                    <div class="workspace-section workspace-status">
                        <div class="workspace-header">Status</div>
                        <div>
                            <p>@workspace.Status</p>
                        </div>
                    </div>

                    <span class="cross delete-workspace" id="@workspace.WorkspaceId"></span>

                    @{ 
                        if(workspace.Status == "Сonsidered")
                        {
                            <div class="confirm-application-btn"><button id="@workspace.OrderId">Confirm</button></div>
                        }
                    }


                    </div>

            }
        }

    </div>

    <div id="add-workspace-view" type="button" class="plus"></div>


</div>